@model WebApplication9.Available
@{
    ViewBag.Title = "findADate";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap-timepicker.min.js"></script>
<link href="~/CSS/bootstrap-timepicker.min.css" rel="stylesheet" />

    <h2>findADate</h2>


    @using (Html.BeginForm())
    {
    //@Html.AntiForgeryToken()
         
    <div class="form-horizontal">
        <h4>Available</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h1>@ViewBag.UserName</h1>
                @Html.HiddenFor(model => model.UserName, htmlAttributes: new { @value = ViewBag.UserName, @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group col-md-10">
            @Html.LabelFor(model => model.availableDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" />
               
            </div>
        </div>


        <div class="form-group bootstrap-timepicker timepicker">
            @Html.LabelFor(model => model.timeStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="timepicker1" type="text" class="form-control input-small">              
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
<script type="text/javascript">
    $('#timepicker1').timepicker({
        minuteStep: 30
    });
</script>

