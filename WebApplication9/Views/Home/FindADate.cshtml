
@{
    ViewBag.Title = "findADate";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="http://lab.iamrohit.in/js/location.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/bootstrap-timepicker.min.js"></script>
<link href="~/CSS/bootstrap-timepicker.min.css" rel="stylesheet" />

    <h2>findADate</h2>


    @using (Html.BeginForm())
    {
    //@Html.AntiForgeryToken()
         
    <div class="form-horizontal">
        <h4>Available</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
        <input type="text" name="userName" value="@User.Identity.Name" class="form-control" hidden/>
        </div>
   

        <div class="form-group col-md-10">
        
            <div class="col-md-10">
                <label>Available Date</label>
                <input type="date" name="availableDate" />               
            </div>
        </div>


        <div class="form-group bootstrap-timepicker timepicker">
            <div class="col-md-10">
                <label>Start time</label>
                <input id="timepicker1" name="timepicker1" type="text" class="form-control input-small">              
            </div>
        </div>
        <div class="form-group col-md-10">
            <div class="col-md-10">
                <label>What gender are you looking for?</label>
                <select>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
        </div>
        <div class="form-group col-md-10">
            <label for="Location">Location:</label><br />
            <select name="country" class="countries" id="countryId">
                <option value="">Select Country</option>
            </select>
            <select name="state" class="states" id="stateId">
                <option value="">Select State</option>
            </select>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
<script type="text/javascript">
    $('#timepicker1').timepicker({
        minuteStep: 30
    });
</script>


