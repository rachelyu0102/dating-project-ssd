@model WebApplication9.ViewModels.ClientInterestViewModel

@{
    ViewBag.Title = "CompleteInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-6 col-md-offset-3">
        <div class="form-group col-md-10">
            <div class="col-md-10">
                <h4 style="margin-top:50px">Complete your info</h4>
            </div>
      
      </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.email)
            </div>
        </div>
        <div class="form-group col-md-10">
                @*@Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @*<label>@Model.userName</label>*@
                @Html.DisplayFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.userName)
            </div>
            @*<div class="col-md-12 col-sm-12">
                @Html.DisplayFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.userName)
            </div>*@
        </div>
        <div class="form-group col-md-10">
            <div class="col-md-10">
              
              @*//  @Html.LabelFor(model => model.gender, htmlAttributes: new { @class = "control-label col-md-2" })*@
            
                <label for="male">Male</label>
                <input type="radio" name="gender" value="male" id="male" />
                <label for="female">Female</label>
                <input type="radio" name="gender" value="female" id="female"/>
            </div>
        </div>
       
        <div class="form-group col-md-10">
            <div class="col-md-10">


                <label>Location:</label><br />
                <select name="country" class="countries" id="countryId" ng-model="country" required>
                    <option value="">Select Country</option>
                </select>
                <select name="province" class="states" id="stateId" ng-model="state" required>
                    <option value="">Select State</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.userId)
            </div>
        </div>

        <div class="form-group col-md-10">
            <div class="col-md-10">
                
                <label>Interests</label>   <br />
                
                <div class="col-md-10" style="padding-left:0px">
                    <select multiple class="form-control" name="interests">
                        @{ 
                            var counter = 0;
                        }
                        @foreach (var x in Model.interests)
                        {
                            <option name="interests[@counter]" value="@x">
                                @x
                            </option>
                            counter++;
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group col-md-10">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="http://lab.iamrohit.in/js/location.js"></script>
<script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
<script src="~/signalr/hubs"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

