
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AcceptAConversation</title>
    <style>
        .messageContainer {
            height: 400px;
            border: 1px solid #ddd;
            border-radius: 4px 4px 0 0;
            margin-top: 20px;
            padding: 5px;
        }

        li {
            list-style: none;
            border: 1px solid #ddd;
            margin-top: 10px;
            padding: 5px;
            padding: 5px;
        }


            li:nth-child(odd) {
                margin-right: 50px;
                background-color: #99e6ff;
                border-radius: 3px;
            }

            li:nth-child(even) {
                margin-left: 50px;
                background-color: #ffe6e6;
                border-radius: 3px;
            }

        .textreaContainer {
            padding: 0px !important;
            margin-bottom: 20px;
            border-radius: 0 0 4px 4px;
        }

        #instant-message {
            border: 1px solid #ddd;
            padding-left: 0px;
            height: 40px;
        }

        #sendMessage {
            height: 40px;
        }
    </style>
    <link rel="stylesheet" href="~/CSS/bootstrap.css">
</head>
<body>
    <h2>start a conversation</h2>

    <div class="col-xs-12">
        <input id="sendTo" value="@ViewBag.sender" style="display:none"><br />
        <input id="sendFrom" value="@User.Identity.Name" style="display:none" /><br />
        <div class="col-xs-12 messageContainer">
            <p>Instate: you accepted a conversation from @ViewBag.sender</p>
            <ul id="conversation-container"></ul>

        </div>
        <div class="col-xs-12 textreaContainer">
            <textarea id="instant-message" class="col-xs-10"></textarea>
            <button id="sendMessage" class="col-xs-2">Send</button>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

    <script>
        $(function () {
            var newConversation = false;//prevent other people's messages get to here
            var setSender = $("#sendTo").val();;
            var chatAccept = $.connection.chatHub;
            chatAccept.client.sendMessage = function (sender,message,time) {
                // Add the message to the page.
               
                if (setSender == sender) {
                    $('#conversation-container').append('<li><strong class="sender">' + sender + '</strong>' + ': ' + '<span>' + message + '</span>' + '<span style="margin-left:20px">' + time + '</span>');
                    setSender = sender;
                }
                };

            $.connection.hub.start().done(function () {
                $('#sendMessage').click(function () {
                    // Call the Send method on the hub.

                    var receiver = $("#sendTo").val();
                    var sender = $("#sendFrom").val();
                    var d = new Date();
                    var time = d.toLocaleString();
                    var message = $('textarea#instant-message').val();
                    $('#conversation-container').append('<li><strong>' + sender + '</strong>' + ': ' + '<span>' + message + '</span>'+'<span style="margin-left:20px">'+ time+ '</span></li>');
                   
                    chatAccept.server.send(receiver, sender, message, time);
                    // Clear text box and reset focus for next comment.
                    $('textarea#instant-message').val('').focus();
                });
            });

        });
    </script>
</body>
</html>
