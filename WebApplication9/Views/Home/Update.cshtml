
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class="form-horizontal col-md-8 col-md-offset-2">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3">
        </div>
    </div>
    <div class="form-group">
        <label for="sellectGender" class="col-sm-2 control-label">Select Gender:</label>
        <select class="form-control"  id=" sellectgender">
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>
    <div class="form-group">
        <label for="inputAge" class="col-sm-2 control-label">Birthdate</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="inputAge">
        </div>
    </div>
    <div class="form-group">
        <label for="selectCity" class="col-sm-2 control-label">Select City:</label>
        <select class="form-control" id=" selectCity">
            <option>Richmond</option>
            <option>Burnaby</option>
            <option>Coquitlam</option>
        </select>
    </div>
    <div class="form-group">
        <label for="selectProvince" class="col-sm-2 control-label">Select Province:</label>
        <select class="form-control" id=" selectProvince">
            <option>British Columbia</option>
            <option>Alberta</option>
            <option>Saskatchewan</option>
        </select>
    </div>
    <div class="form-group">
        <label for="selectCountry" class="col-sm-2 control-label">Select Country:</label>
        <select class="form-control" id=" selectCountry">
            <option>Canada</option>
            <option>United States</option>
            <option>Mexico</option>
        </select>
    </div>
    <label for="sel2">Interests (hold shift to select more than one):</label>
    <select multiple class="form-control" id="sel2">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
            <button type="submit" class="btn btn-info col-sm-12">Update</button>
        </div>
        <div class="col-sm-offset-2 col-sm-3">
            <button type="submit" class="btn btn-info col-sm-12">Delete</button>
        </div>
    </div>


</form>
